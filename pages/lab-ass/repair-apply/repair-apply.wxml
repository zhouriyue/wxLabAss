<view style="width: 100%;height: 40px"><button class="addRepAPP" bindtap="addrepApp">添加维修申请</button></view>
<view class="head">
  <view class="head_item">维修申请信息</view>
  <view class="ring"></view>
  <view class="head_item">操作</view>
</view>
<block wx:for="{{repairApplys}}">
  <view class="item" bindtap="seePerson" id="{{item.id}}">
    <view class="intro">
      <view class="position">
        设备编号：{{item.deviceId}}
      </view>
      <view class="jiaqian">
        设备名称：{{item.deviceName}}
      </view>
      <view class="address">
       <text decode="{{true}}"> 型号：{{item.modelNumber}}&ensp;&ensp; 时间: {{item.repairDate}}</text>
      </view>
      <view class="dizhi">
        故障描述：{{item.hitchDepict}} 
      </view>
    </view>
    <button class='but'>修改</button>
    <button class='but1'>删除</button>
  </view>
  <view class="hr"></view>
</block>


